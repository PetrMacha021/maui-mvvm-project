<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:endproject.ViewModels"
             x:Class="endproject.Pages.Login">
    <StackLayout Padding="10">
        <Entry Placeholder="Username" Text="{Binding Username}"></Entry>
        <Entry Placeholder="Password" Text="{Binding Password}" IsPassword="True"></Entry>
        <Button Text="Login" Command="{Binding LoginCommand}"></Button>
        <Label Text="{Binding ErrorMessage}" TextColor="Red" />
    </StackLayout>
</ContentPage>
