<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="endproject.Pages.Main.Profile">
    <ContentPage.Content>
        <VerticalStackLayout>
            <Entry Placeholder="Username" Text="{Binding Username}"></Entry>
            <Entry Placeholder="Password" Text="{Binding Password}" IsPassword="True"></Entry>
            <Button Text="Change" Command="{Binding ChangeCommand}"></Button>
            <Button Text="Logout" Command="{Binding LogoutCommand}"></Button>
        </VerticalStackLayout>
    </ContentPage.Content>
</ContentPage>
