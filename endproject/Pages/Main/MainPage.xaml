<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="using:endproject.ViewModels"
             x:Class="endproject.Pages.Main.MainPage">
    <ContentPage.Content>
        <Grid Padding="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>

            <ScrollView>
                <ListView ItemsSource="{Binding Items}" BackgroundColor="Transparent">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <ViewCell>
                                <HorizontalStackLayout >
                                    <Label Padding="5,10" Text="{Binding Message}"></Label>
                                    <Button Text="Remove" Command="{Binding Source={RelativeSource AncestorType={x:Type local:Main}}, Path=RemoveItem}" CommandParameter="{Binding Id}" />
                                </HorizontalStackLayout>
                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </ScrollView>

            <Grid Grid.Row="1" VerticalOptions="End">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="auto" />
                </Grid.ColumnDefinitions>
                <Entry Placeholder="Message" Text="{Binding Message}"></Entry>
                <Button Grid.Column="1" Text="Add" Command="{Binding AddCommand}"></Button>
            </Grid>
        </Grid>
    </ContentPage.Content>
</ContentPage>
