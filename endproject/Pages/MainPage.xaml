<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:endproject.ViewModels"
             x:Class="endproject.Pages.MainPage">
    <ContentPage.BindingContext>
        <vm:Main></vm:Main>
    </ContentPage.BindingContext>

    <StackLayout Padding="10">
        <Button Text="Logout" Command="{Binding LogoutCommand}"></Button>
        <ListView ItemsSource="{Binding Items}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <Grid Padding="10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="auto"></ColumnDefinition>
                                <ColumnDefinition Width="auto"></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <Label Text="{Binding Id}"></Label>
                            <Label Grid.Column="1" Text="{Binding Message}"></Label>
                        </Grid>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <Entry Placeholder="Message" Text="{Binding Message}"></Entry>
        <Button Text="Add" Command="{Binding AddCommand}"></Button>
    </StackLayout>
</ContentPage>
